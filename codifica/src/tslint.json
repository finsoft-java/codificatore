{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "max-line-length": {
            "options": [120]
        },
        "prefer-for-of": false,
        "deprecation": false,
        "no-string-literal": false,
        "no-invalid-template-strings": true,
        "space-within-parens":true
    }
}
